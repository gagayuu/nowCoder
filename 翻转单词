public class Solution {
    public String ReverseSentence(String str) {
         
        if(str.trim().equals("")){
            return str;
        }
 
        String[] value = str.split(" ");
        StringBuilder sb = new StringBuilder();
        for (int i=value.length-1;i>=0;i--){
            sb.append(value[i]);
            if(i!=0){
                sb.append(" ");
            }
        }
        return sb.toString();
    }
}
