function username_verify() {
    var username=document.getElementById("account");
    var re= /^[a-z0-9]{1,16}$/;
    if(username.value==""){
        document.getElementById("usernameError").innerText="请输入用户名";
    }else if(username.value.length<1||username.value.length>=16){
        console.log(username.value);
        document.getElementById("usernameError").innerText="格式错误，长度应为1-16个字符";
    }else if(!re.test(username.value)){
        document.getElementById("usernameError").innerText="格式错误，只能包含英文字母或者数字";
    }else{
        document.getElementById("usernameError").innerText="";
    }

}
function password_verify() {
    var password=document.getElementById("password");
    var re=/^[a-z0-9]{6,31}$/;
    if(password.value==""){
        document.getElementById("passwordError").innerText="请输入密码";
    }else if(password.value.length<6 || password.value.length>31){
        document.getElementById("passwordError").innerText="格式错误，密码长度为6-31位";
    }else if(!re.test(password.value)){
        document.getElementById("passwordError").innerText="格式错误，必须为英文字母或数字";
    }else{
        document.getElementById("passwordError").innerText="";
    }
}
function passwordAgain_verify() {
    var password=document.getElementById("password");
    var passwordAgain=document.getElementById("passwordAgain");
    if(password.value!=passwordAgain.value){
        document.getElementById("passwordAError").innerText="两次密码输入不一致";
    }else{
        document.getElementById("passwordAError").innerText="";
    }
}
function email_verify() {
    var email=document.getElementById("email");
    var re=/[a-zA-Z0-9]{1,10}@[a-zA-Z0-9]{1,5}\.[a-zA-Z0-9]{1,5}/;
    if(email.value==""){
        document.getElementById("emailError").innerText="请输入电子邮箱";
    }else if(!re.test(email.value)){
        document.getElementById("emailError").innerHTML="邮箱格式不正确";
    }else{
        document.getElementById("emailError").innerText="";
    }
}

